<Window x:Class="Asynts.Recall.Frontend.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asynts.Recall.Frontend.Views"
        xmlns:viewmodel="clr-namespace:Asynts.Recall.Frontend.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:PageListViewModel}">
            <local:PageList DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:PageViewModel}">
            <local:Page DataContext="{Binding}" Padding="4px" />
        </DataTemplate>
    </Window.Resources>
    
    <StackPanel>
        <local:QueryBox />

        <Separator Background="Black" Margin="0" />

        <ContentControl Content="{Binding CurrentViewModel}" />
    </StackPanel>
</Window>
