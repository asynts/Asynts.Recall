<UserControl x:Class="Asynts.Recall.Frontend.Views.TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asynts.Recall.Frontend.Views"
             xmlns:viewmodel="clr-namespace:Asynts.Recall.Frontend.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodel:TextBoxViewModel, IsDesignTimeCreatable=True}">
    <Grid Margin="4px">
        <TextBlock
            Margin="5px,2px"
            Text="{Binding PlaceholderText}"
            Visibility="{Binding PlaceholderVisibility}"
            Foreground="Gray"
            Grid.Row="0"
            Grid.Column="0" />
        <TextBox
            Text="{Binding Path=Text, Mode=TwoWay}"
            Padding="2px"
            Background="Transparent"
            Grid.Row="0"
            Grid.Column="0" />
    </Grid>
</UserControl>
