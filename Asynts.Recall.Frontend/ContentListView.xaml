<Page x:Class="Asynts.Recall.Frontend.ContentListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Asynts.Recall.Frontend"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ContentListView">

    <ListView ItemsSource="{Binding ContentList}">
        <ListView.View>
            <!-- FIXME: How to use something other than 'GridView' here? -->
            <GridView>
                <GridViewColumn DisplayMemberBinding="{Binding Path=Id}" Header="Id" Width="100" />
                <GridViewColumn DisplayMemberBinding="{Binding Path=Title}" Header="Title" Width="300" />
            </GridView>
        </ListView.View>
    </ListView>
</Page>
